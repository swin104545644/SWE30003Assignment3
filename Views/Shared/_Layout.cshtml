<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - OnlineShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Products" asp-action="Index">OnlineShop</a>
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" asp-controller="Products" asp-action="Index">Catalog</a>
                    <a class="nav-link" asp-controller="Cart" asp-action="Index">Cart</a>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">Products</a>
                            <a class="nav-link" asp-controller="Admin" asp-action="Users">Users</a>
                        }
                        <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout (@User.Identity.Name)</a>
                    }
                    else
                    {
                        <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        <a class="nav-link" asp-controller="Account" asp-action="Signup">Signup</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (TempData["CartWarning"] != null)
        {
            <div class="alert alert-warning">@TempData["CartWarning"]</div>
        }
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>