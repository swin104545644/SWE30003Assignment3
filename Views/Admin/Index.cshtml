@model List<OnlineShop.Models.Product>

<h2>Manage Products</h2>
<a asp-action="Create" class="btn btn-success mb-3">Add New Product</a>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>
                <img src="@p.ImageUrl" alt="@p.Name" style="width:50px; height:50px; object-fit:cover;" />
            </td>
            <td>@p.Name</td>
            <td>$@p.Price</td>
            <td>@p.Stock</td>
            <td>
                <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">
                    Edit
                </a>
                <a asp-action="OrderStock" asp-rout-id="@p.Id" class="btn btn-info btn-sm">
                    OrderStock
                </a>
                <form asp-action="Delete" method="post" style="display:inline">
                    <input type="hidden" name="id" value="@p.Id" />
                    <button type="submit" class="btn btn-danger btn-sm"
                            onclick="return confirm('Delete @p.Name?')">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>