<h2>Login</h2>
<form asp-action="Login" method="post">
    <div class="mb-3">
        <label>Email</label>
        <input name="email" type="email" class="form-control" />
        @if (ViewData.ModelState["email"]?.Errors.Any() == true)
        {
            <div class="text-danger">@ViewData.ModelState["email"].Errors[0].ErrorMessage</div>
        }
    </div>
    <div class="mb-3">
        <label>Password</label>
        <input name="password" type="password" class="form-control" />
        @if (ViewData.ModelState["password"]?.Errors.Any() == true)
        {
            <div class="text-danger">@ViewData.ModelState["password"].Errors[0].ErrorMessage</div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    @if (ViewData.ModelState["unexpected"]?.Errors.Any() == true)
    {
        <div class="text-danger">@ViewData.ModelState[""].Errors[0].ErrorMessage</div>
    }
</form>
<div class="mt-3">
    <a asp-action="ForgotPassword">Forgot Password?</a>
</div>
<a asp-action="Signup">Signup</a>